<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="7"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:padding="@dimen/mainlayoutpadding">


    <LinearLayout
        android:layout_width="@dimen/linearlayoutwidth"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/titlebottommargin"
            android:ellipsize="end"
            android:maxLines="2"
            android:scrollHorizontally="true"
            android:shadowColor="@color/shadowcolor"
            android:shadowRadius="1.0"
            android:text="@string/newstitle"
            android:textColor="@color/textcolor"
            android:textSize="@dimen/titletextsize" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="2"
            android:scrollHorizontally="true"
            android:text="@string/description"
            android:textColor="@color/descriptiontextcolor"
            android:textSize="@dimen/desptextsize" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="@dimen/linearlayoutwidth"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/newsauthor"
                    android:textColor="@color/authortextcolor"
                    android:textSize="@dimen/authortextsize" />

            </LinearLayout>


            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/time"
                android:textColor="@color/authortextcolor"
                android:textSize="@dimen/authortextsizw" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>

